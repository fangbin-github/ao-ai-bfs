<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gov.cnao.ao.ai.bfs.mapper.PersonsMapper">
  <resultMap id="BaseResultMap" type="gov.cnao.ao.ai.bfs.entity.Persons">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name
  </sql>
  
  <select id="selectByExample" parameterType="gov.cnao.ao.ai.bfs.entity.Persons" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from persions
    where 1=1
    <if test="id != null and id != ''">
            and ID = #{id}
    </if>
    <if test="name != null and name != ''">
            and NAME = #{name}
    </if>
  </select>
  
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from persions
    where id = #{id,jdbcType=VARCHAR}
  </select>
  
   <insert id="insertPersions" parameterType="gov.cnao.ao.ai.bfs.entity.Persons">
        <selectKey keyProperty="id" resultType="String" order="BEFORE">
            select replace(UUID(),'-','') from dual
        </selectKey>
        INSERT INTO
        persions
        (
	         ID,
			 NAME
        )
        VALUES
        (
	        #{id},
	        #{name}
        )
    </insert>
    
    <update id="updatePersions" parameterType="gov.cnao.ao.ai.bfs.entity.Persons">
       update persions set 
       	   NAME=#{name}
        where id=#{id}
    </update>
    
    <delete id="deletePersions" parameterType="gov.cnao.ao.ai.bfs.entity.Persons">
        delete from persions where id = #{id}
    </delete> 
</mapper>